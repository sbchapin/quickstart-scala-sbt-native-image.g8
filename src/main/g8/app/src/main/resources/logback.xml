<configuration>
    <appender name="COLOR" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%date] %highlight([%-5level]) [%thread %logger{20} %file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <root level="trace">
        <appender-ref ref="COLOR"/>
    </root>
</configuration>